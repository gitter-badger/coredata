@using cloudscribe.Web.Pagination
@using CoreData.ViewModels
@using CoreData.Models

@model ArticleListViewModel
@{
    ViewBag.Title = "Browse all articles with Model";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-xs btn-default"
       asp-action="IndexAjax" asp-controller="Blog"
       bs-modal-link="true">Ajax Modal</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Article name</th>
            <th>Category</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Name</td>
                <td>@article.Category</td>
            </tr>}

    </tbody>

</table>

<div>

    <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
              cs-paging-pagenumber="@Model.Paging.CurrentPage"
              cs-paging-totalitems="@Model.Paging.TotalItems"
              cs-pagenumber-param="page"
              cs-show-first-last="true"
              cs-suppress-empty-nextprev="true"
              cs-suppress-inactive-firstlast="true"
              cs-first-page-text="First"
              cs-last-page-text="Last"
              cs-pager-li-current-class="active"
              cs-pager-li-non-active-class="disabled"
              asp-route="blogRoute"
              asp-controller="Blog"
              asp-action="Index">
    </cs-pager>

</div>



@section Scripts {
    <environment names="Development">
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
        <script src="~/jsdev/cloudscribe-modaldialog-bootstrap.js"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/jsdev/cloudscribe-modaldialog-bootstrap.js"></script>
    </environment>
}